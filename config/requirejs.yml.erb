paths:
  backbone: 'bower_components/backbone/backbone'
  backbone-sortable-collection: 'bower_components/backbone-sortable-collection/lib/backbone_sortable_collection'
  moment: 'bower_components/moment/moment'
  react: <%= "bower_components/react/#{ Rails.env.test? ? 'react-with-addons' : 'react' }" %>
  'react.backbone': 'bower_components/react.backbone/react.backbone'
  'react-bootstrap': 'bower_components/react-bootstrap/react-bootstrap'
  'react-router': <%= Rails.env.test? ? 'support/react_router_mock' : 'bower_components/react-router/dist/react-router' %>
  reqwest: 'bower_components/reqwest/reqwest'
  underscore: 'bower_components/underscore/underscore'
map:
  backbone:
    jquery: 'objects/jquery_mock'
  '*':
    'bower/backbone': 'backbone'
    'bower/backbone_sortable_collection': 'backbone-sortable-collection'
    'bower/moment': 'moment'
    'bower/react': 'react.backbone' # This loads react
    'bower/react_bootstrap': 'react-bootstrap'
    'bower/react_router': 'react-router'
    'bower/reqwest': 'reqwest'
    'bower/underscore': 'underscore'
urlArgs: '<%= Rails.env.test? ? '&instrument=1'.html_safe : '' %>'

# Add shim config to application.js (so that it is set even after js is
#   compiled + optimized)
