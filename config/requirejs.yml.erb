paths:
  backbone: 'backbone/backbone'
  moment: 'moment/moment'
  react: <%= Rails.env.test? ? 'react/react-with-addons' : 'react/react' %>
  'react.backbone': 'react.backbone/react.backbone'
  'react-router': <%= Rails.env.test? ? 'support/react_router_mock' : 'react-router/dist/react-router' %>
  reqwest: 'reqwest/reqwest'
  sinon: 'sinon/lib/sinon'
  underscore: 'underscore/underscore'
map:
  backbone:
    jquery: 'objects/jquery_mock'
  '*':
    'bower/backbone': 'backbone'
    'bower/moment': 'moment'
    'bower/react': 'react.backbone' # This loads react
    'bower/react_router': 'react-router'
    'bower/reqwest': 'reqwest'
    'bower/sinon': 'sinon'
    'bower/underscore': 'underscore'
urlArgs: '<%= Rails.env.test? ? '&instrument=1'.html_safe : '' %>'

